<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center">
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10pt"
            android:text="Estado de mi Centro:"/>
    </LinearLayout>
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="100">
    <LinearLayout
        android:layout_weight="33"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:paddingRight="10dp"
        >
        <Button
            android:id="@+id/btninguno"
            android:background="@color/red"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="NINGUNO"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="33"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:paddingRight="10dp"
        >
        <Button
            android:id="@+id/btsolotrombolisis"
            android:background="@color/yellow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SOLO TROMBOLISIS"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="33"
        android:layout_width="0dp"
        android:layout_height="300dp"
        >
        <Button
            android:id="@+id/bttrombolisistrombectomia"
            android:background="@color/green"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="TROMBOLISIS+TROMBECTOMÍA"/>
    </LinearLayout>
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v7.widget.LinearLayoutCompat>
